@model Company

<div class="container">
    <div class="card shadow border-0 mt-4 mx-auto mb-5">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-light">@(Model.Id != 0 ? "Update":" Create") Company</h2>
                </div>
            </div>
        </div>
        <form method="post" class="row border p-3 " enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden/>           
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="None"></div>
                    <div class="row">
                        <div class="col-12 col-md-6 mb-2 ps-5 pe-5 fw-bold ">
                            <label class="mb-1" asp-for="@Model.Name"> </label>
                            <input asp-for="@Model.Name" class="form-control" />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 mb-2  ps-5 pe-5 fw-bold">
                            <label class="mb-1" asp-for="@Model.City"></label>
                            <input asp-for="@Model.City" class="form-control" />
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="row"> 
                        <div class="col-12 col-md-6 ps-5 pe-5 fw-bold">
                            <label class="mb-1" asp-for="@Model.Province"></label>
                            <input asp-for="@Model.Province" class="form-control" />
                            <span asp-validation-for="@Model.Province" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 ps-5 pe-5 fw-bold">
                            <label class="mb-1" asp-for="@Model.StreetAddress"></label>
                            <input asp-for="@Model.StreetAddress" class="form-control" />
                            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 ps-5 pe-5 fw-bold">
                            <label class="mb-1" asp-for="@Model.PhoneNumber"></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                       
                    </div>
     
                                       
                    @*  button  *@
                    <div class="row m-3">
                        <div class="col-6 col-md-3">
                            @if (Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control"> Update </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control"> Create </button>
                            }
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-primary form-control">
                                Back to company list
                            </a>
                        </div>
                    </div>
                </div>
               
            </div>

       
        </form>
    </div>
</div>


