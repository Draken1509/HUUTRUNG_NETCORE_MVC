@model Category




<div class="container">
    <div class="card shadow border-0 mt-4 mx-auto mb-5" style="max-width: 1200px;">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-light"> Create Category</h2>
                </div>
            </div>
        </div>
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="mb-2 row ps-3 pe-3">
                    <label asp-for="Name">Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-2 row  ps-3 pe-3">
                    <label asp-for="DisplayOrder"></label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class=row>
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control"> Edit </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                            Back to Category
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


