@model List<Comic>
<div class="container">
    <div class="card mb-3" >
        <div class="card-header text-center">
            <h3 class="text-primary mb-0">COMIC LIST</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <!-- Cột chứa nút Import và Export -->
                <div class="col-md-4 d-flex justify-content-start " style="align-content: flex-end;">
                    <a asp-controller="Comic" asp-action="Upsert" class="btn btn-secondary me-2">
                        <i class="bi bi-box-arrow-down"></i> Import
                    </a>
                    <a asp-controller="Comic" asp-action="Upsert" class="btn btn-secondary">
                        <i class="bi bi-box-arrow-up"></i></i> Export
                    </a>
                </div>               
                <div class="col-md-8 d-flex justify-content-end">
                    <a asp-controller="Comic" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create new Comic
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="tblData" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>N/A</th>
                            <th>Name</th>
                            <th>Writer</th>
                            <th>ArtBy</th>
                            <th>Price</th>
                            <th>OnSaleDate</th>
                            <th>PageCount</th>
                            <th>Rated</th>
                            <th>Type</th>
                            <th>New</th>
                            <th></th>
                        </tr>
                    </thead>

                </table>
            </div>
          
        </div>
    </div>
</div>


@section Scripts {    
    <script src="~/js/comic.js"></script>   
}














